{
  "name": "cloudinary-tiny-js",
  "version": "2.0.0",
  "description": "A much smaller alternative to cloudinary-core for client side image transformations",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "clean": "rimraf lib es coverage",
    "lint": "eslint src/**/*.{ts,tsx,js}",
    "typecheck": "tsc",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:coverage": "jest --coverage",
    "build": "yarn build:cjs && yarn build:es",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build:es": "tsc -p tsconfig.build.es.json",
    "prepublishOnly": "yarn clean && yarn lint && yarn typecheck && yarn test:ci && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marnusw/cloudinary-tiny-js.git"
  },
  "keywords": [
    "cloudinary"
  ],
  "authors": [
    "Marnus Weststrate <marnusw@gmail.com> (https://github.com/marnusw)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marnusw/cloudinary-tiny-js/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{ts,js,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
